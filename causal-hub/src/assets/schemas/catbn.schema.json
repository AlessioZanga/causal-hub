{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "catbn.schema.json",
    "type": "object",
    "properties": {
        "states": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "graph": {
            "$ref": "digraph.schema.json"
        },
        "cpds": {
            "$ref": "catcpd.schema.json"
        },
        "topological_order": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        }
    },
    "required": [
        "states",
        "graph",
        "cpds",
        "topological_order"
    ]
}